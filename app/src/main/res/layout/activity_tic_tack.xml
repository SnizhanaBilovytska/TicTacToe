<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TicTack"
    android:clickable="false"
    android:background="@drawable/background1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:text="choose"
        android:textColor="#ff000000"
        android:visibility="visible"
        android:inputType="text"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/redBut"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redBut"
        android:background="@drawable/red"
        android:visibility="visible"
        android:layout_toEndOf="@+id/editText1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/editText1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueBut"
        android:layout_toStartOf="@+id/editText1"
        android:background="@drawable/blue"
        android:layout_above="@+id/editText1"
        android:layout_toLeftOf="@+id/editText1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fon"
        android:contentDescription="@string/firstImage"
        android:baselineAlignBottom="true"
        android:layout_above="@+id/redBut"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
